<% provide(:title, 'creerpointofservice') %>
<h1>Créer un nouveau point de service</h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@point_of_service) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div id="main-container" class="container">
        <div id="Info Point de Service" class="col-md-6">

        <h1><a>Information</a></h1>

        <%= f.label :nom %>
        <%= f.text_field :nom, class: 'form-control', placeholder: 'nom' %>

        <%= f.label :tel %>
        <%= f.telephone_field :tel, class: 'form-control', placeholder: 'xxx-xxx-xxxx' %>

        <%= f.label :fax %>
        <%= f.telephone_field :fax, class: 'form-control', placeholder: 'xxx-xxx-xxxx' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'exemple@email.com' %>
        </div>
        <div id="Adresse Point de Service" class="col-md-6">

        <h1><a>Adresse</a></h1>

        <%= f.label :no_civique %>
        <%= f.text_field :no_civique, class: 'form-control', placeholder: '123' %>

        <%= f.label :rue %>
        <%= f.text_field :rue, class: 'form-control' , placeholder: 'Une Rue'%>

        <%= f.label :ville %>
        <%= f.text_field :ville, class: 'form-control', placeholder: 'Ville' %>

        <%= f.label :province %>
        <%= f.collection_select :province, PointOfService::PROVINCES, :to_s, :humanize %>

        <%= f.label :code_postal %>
        <%= f.text_field :code_postal, class: 'form-control', placeholder: 'A1B 2C3' %>

        </div>
    </div>

    <%= f.label "Si vous connaissez l'ID de l'Organisme" %>
    <%= f.number_field :organismes_id, class: 'form-control' %>

    <%= f.submit "Créer un point de service", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
